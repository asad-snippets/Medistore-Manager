<%- include('Partials/header') %>
<link rel="stylesheet" href="/Stylesheet/dashboard.css">
<script defer src="/Javascript/dashboard.js"></script>

<div class="dashboard-container">
  <div class="dashboard-header">
    <% if (user && user.shopName) { %>
      <h1>Welcome to <%= user.shopName %>!</h1> <!-- Display shop name if logged in -->
    <% } else { %>
      <h1>Welcome to MediStore Manager</h1> <!-- Default text if no user is logged in -->
    <% } %>
    <p class="dashboard-subtitle">Your pharmacy management system</p>
  </div>

