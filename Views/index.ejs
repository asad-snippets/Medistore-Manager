  <div class="stats-grid">
    <div class="stat-card total-medicines">
      <div class="stat-icon">
        <i class="fas fa-pills"></i>
      </div>
      <div class="stat-content">
        <h3>Total Medicines</h3>
        <p class="stat-value"><%= totalMedicines %></p>
        <p class="stat-description">All medicines in inventory</p>
      </div>
    </div>

    <div class="stat-card low-stock">
      <div class="stat-icon">
        <i class="fas fa-exclamation-triangle"></i>
      </div>
      <div class="stat-content">
        <h3>Low Stock</h3>
        <p class="stat-value"><%= lowStockCount %></p>
        <p class="stat-description">Items needing restock</p>
      </div>
    </div>

    <div class="stat-card categories">
      <div class="stat-icon">
        <i class="fas fa-tags"></i>
      </div>
      <div class="stat-content">
        <h3>Categories</h3>
        <p class="stat-value"><%= totalCategories %></p>
        <p class="stat-description">Medicine categories</p>
      </div>
    </div>
  </div>

  <div class="quick-actions">
    <h2>Quick Actions</h2>
    <div class="action-buttons">
      <a href="/add" class="action-btn">
        <i class="fas fa-plus-circle"></i> Add Medicine
      </a>
      <a href="/records" class="action-btn">
        <i class="fas fa-list"></i> View Inventory
      </a>
    </div>
  </div>
</div>

