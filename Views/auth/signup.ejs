<%- include('../Partials/header') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="/Stylesheet/login-signup.css">


<div class="auth-container">
  <h1><i class="fas fa-user-plus"></i> Create Your Account</h1>

  <% if (error) { %>
    <div class="alert-danger"><%= error %></div>
  <% } %>

  <% if (successMessage) { %>
    <div class="alert-success"><%= successMessage %></div>
  <% } %>

  <form action="/auth/signup" method="POST" class="auth-form">
    <div class="form-group">
      <label for="shopName">Shop Name</label>
      <div class="input-with-icon">
        <i class="fas fa-store"></i>
        <input type="text" id="shopName" name="shopName" required>
      </div>
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <div class="input-with-icon">
        <i class="fas fa-envelope"></i>
        <input type="email" id="email" name="email" required>
      </div>
    </div>

    <div class="form-group">
      <label for="shopAddress">Shop Address</label>
      <div class="input-with-icon">
        <i class="fas fa-map-marker-alt"></i>
        <textarea id="shopAddress" name="shopAddress" required></textarea>
      </div>
    </div>

    <div class="form-group">
      <label for="phone">Phone Number</label>
      <div class="input-with-icon">
        <i class="fas fa-phone"></i>
        <input type="tel" id="phone" name="phone" required>
      </div>
    </div>

    <div class="form-row d-flex gap-3">
      <div class="form-group flex-fill">
        <label for="password">Password</label>
        <div class="input-with-icon">
          <i class="fas fa-lock"></i>
          <input type="password" id="password" name="password" required>
        </div>
      </div>

      <div class="form-group flex-fill">
        <label for="confirmPassword">Confirm Password</label>
        <div class="input-with-icon">
          <i class="fas fa-lock"></i>
          <input type="password" id="confirmPassword" name="confirmPassword" required>
        </div>
      </div>
    </div>

    <button type="submit" class="auth-btn mt-3">
      <i class="fas fa-user-plus"></i> Register
    </button>
  </form>

  <div class="auth-footer">
    Already have an account? <a href="/auth/login">Login here</a>
  </div>
</div>

<%- include('../Partials/footer') %>
