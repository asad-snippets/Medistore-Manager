<%- include('partials/header') %>
<link rel="stylesheet" href="/stylesheet/addmedicine.css">
<div class="add-medicine-container">
  <div class="add-medicine-card">
    <div class="form-header">
      <i class="fas fa-pills"></i>
      <h1>Add New Medicine</h1>
      <p>Fill in the details below to add a new medicine to inventory</p>
    </div>

    <!-- ✅ Success Message -->
    <% if (successMessage) { %>
      <div class="success-alert">
        <i class="fas fa-check-circle"></i> <%= successMessage %>
      </div>

      <!-- ✅ Auto-redirect after 2 seconds -->
    <script>
      setTimeout(() => {
        window.location.href = "/records";
      }, 2000);
    </script>
    <% } %>

    <form action="/add" method="POST" class="add-medicine-form">
      <div class="form-group">
        <label for="name">Medicine Name</label>
        <div class="input-with-icon">
          <i class="fas fa-medkit"></i>
          <input type="text" id="name" name="name" placeholder="e.g., Paracetamol 500mg" required>
        </div>
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        <div class="input-with-icon">
          <i class="fas fa-tags"></i>
          <input type="text" id="category" name="category" placeholder="e.g., Painkiller, Antibiotic" required>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="price">Price (RS)</label>
          <div class="input-with-icon">
            <i class="fas fa-rupee-sign"></i>
            <input type="number" id="price" name="price" placeholder="0.00" min="0" step="0.01" required>
          </div>
        </div>

        <div class="form-group">
          <label for="stock">Stock Quantity</label>
          <div class="input-with-icon">
            <i class="fas fa-boxes"></i>
            <input type="number" id="stock" name="stock" placeholder="0" min="0" required>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <button type="submit" class="submit-btn">
          <i class="fas fa-plus-circle"></i> Add Medicine
        </button>
        <a href="/records" class="cancel-btn">
          <i class="fas fa-times"></i> Cancel
        </a>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
